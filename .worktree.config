# Worktree configuration for this project
# Each project defines its own base port and services to avoid conflicts.
#
# Port formula: BASE_PORT + (worktree_index * 100) + service_offset

BASE_PORT=6000

# Services and their port offsets (name=offset)
# These are used by generate-env-local.sh to create PORT_* variables
# Template placeholders use {{PORT_<NAME>}} format
SERVICES=(
    "WEB=0"
    "API=1"
    "SUPABASE_API=10"
    "SUPABASE_DB=11"
    "SUPABASE_STUDIO=12"
    "SUPABASE_SHADOW=13"
    "SUPABASE_POOLER=14"
    "SUPABASE_INBUCKET=15"
    "SUPABASE_INSPECTOR=16"
    "PREFECT=20"
    "MINIO_API=30"
    "MINIO_CONSOLE=31"
)
