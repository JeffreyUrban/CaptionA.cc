{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Python version updates - creates awareness when new versions are available",
      "matchManagers": ["regex"],
      "matchPackageNames": ["python"],
      "schedule": ["every 3 months on the first day of the month"],
      "commitMessagePrefix": "⬆️ Python:",
      "automerge": false
    }
  ],
  "regexManagers": [
    {
      "description": "Track Python version in pyproject.toml files",
      "fileMatch": ["(^|/)pyproject\\.toml$"],
      "matchStrings": [
        "requires-python\\s*=\\s*\">=(?<currentValue>\\d+\\.\\d+),<\\d+\\.\\d+\""
      ],
      "datasourceTemplate": "python-version",
      "depNameTemplate": "python"
    }
  ]
}
